<!DOCTYPE html>
<html>
  <head>
    <title>Kiwasaki03</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
  </head>
  <body>
    <header class="header">
      <div class="header-logo">
        <%= link_to "TweetApp", root_path %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
          <li><%= link_to @current_user.name,  user_path(@current_user.id) %></li>
          <li><%= link_to "投稿一覧", posts_path %></li>
          <li><%= link_to "投稿する", new_post_path %></li>
          <li><%= link_to "ユーザー一覧", users_path %></li>
          <li><%= link_to "ログアウト", logout_users_path, method: :post %></li>
        <% else %>
          <li><%= link_to "新規登録", signup_users_path %></li>
          <li><%= link_to "ログイン", login_users_path %></li>
        <% end %>
      </ul>
    </header>
    <% if flash[:notice] %>
      <div class="notification">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
