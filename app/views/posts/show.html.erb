<div class="main posts-show">
  <div class="container">
    <div class="post-item">
      <div class="post-item__user">
        <%= image_tag @post.user.image_name.url, size: "100x100", class: "post-item__user--image" %>
        <%= link_to @post.user.name, user_path(@post.user.id) , class: "post-item__user--name" %>
      </div>
      <p class="post-item__content"><%= @post.content %></p>
      <div class="post-item__time">
        <%= l @post.created_at %>
      </div>
      <% if Like.find_by(user_id: @current_user.id, post_id: @post.id) %>
        <%= link_to "/likes/#{@post.id}/destroy", method: :post, class: "post-item__like-btn"  do%>
          <span class="fa fa-heart like-btn-unlike"></span>
        <% end %>
      <% else %>
        <%= link_to "/likes/#{@post.id}/create", method: :post, class: "post-item__like-btn" do %>
          <span class="fa fa-heart like-btn"></span>
        <% end %>
      <% end %>
      <span class ="post-item__count"><%= @likes_count %></p>
      <% if @current_user.id == @post.user_id%>
        <div class="post-item__menus">
          <%= link_to "編集", edit_post_path(@post.id) %>
          <%= link_to "削除", post_path(@post.id), method: :delete %>
        </div>
      <% end %>
    </div>
  </div>
</div>