<div class="main users-new">
  <div class="container">
    <h1 class="heading">新規ユーザー登録</h1>
    <%= form_with model: @user, class: "users-form", local: true do |f| %>
      <div class="users-form__body">
        <% @user.errors.full_messages.each do |message| %>
          <p class="errors"><%= message %></p>
        <% end %>
        <p class="users-form__body--title">ニックネーム</p>
        <%= f.text_field :name, class: "users-form__body--field", placeholder: "nickname" %>
        <p class="users-form__body--title">メールアドレス</p>
        <%= f.text_field :email, class: "users-form__body--field", placeholder: "email" %>
        <p class="users-form__body--title">パスワード</p>
        <%= f.password_field :password, class: "users-form__body--field", placeholder: "password" %>
        <%= f.submit "signup", class: "users-form__body--btn" %>
      </div>
    <% end %>
  </div>
</div>